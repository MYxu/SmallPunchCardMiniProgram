.commented-news-list-item{
    width: auto;
    height: auto;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    padding-top: 30rpx;
}
.reviewer-avatar {
    width: 140rpx;
    height: auto;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.reviewer-avatar > image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}

.comment-info-area {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    color: black;
    font-size: 32rpx;
}
.comment-info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
}
.comment-user-info {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
}
.respondent-nick-name, .reviewer-nick-name {
    color: #F0B27A;
}
.comment-text {
    color: black;
    font-size: 14px;
}
.comment-create_time {
    font-size: 24rpx;
    color: #C9C9C9;
    margin-bottom: 20rpx;
}

.comment-news-into-diary-detail-page-btn {
    width: 100rpx;
    height: auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.comment-news-into-diary-detail-page-btn > image {
    height: 64rpx;
    width: 64rpx;
}

