.container {
    width: 100%;
    height: 100%;
}
.liked-news-list-item{
    width: auto;
    height: 140rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}
.admirer-avatar {
    width: 140rpx;
    height: 140rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.admirer-avatar > image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}

.like-info-area {
    width: 100%;
    height: 140rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    color: #F0B27A;
    font-size: 32rpx;
}
.like-info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
}
.like-create_time {
    font-size: 24rpx;
    color: black;
}

.into-diary-detail-page-btn {
    width: 100rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.into-diary-detail-page-btn > image {
    height: 64rpx;
    width: 64rpx;
}

.item-separator {
    width: 100%;
    height: 2rpx;
    background-color: #e5e5e5;
    margin-left: 140rpx;
}

