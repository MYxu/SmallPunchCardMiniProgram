.container {
    width: 100%;
    height: 100%;
    background-color: whitesmoke;
}

.container-header {
    width: 100%;
    height: auto;
    padding: 20rpx 0;
    background-color: white;
}

/*圈子名称*/
.project-name {
    width: auto;
    height: auto;
    margin: 0 30rpx;

    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}
.project-name image {
    width: 32rpx;
    height: 32rpx;
    margin-left: 10rpx;
}
.project-name > text {
    font-size: 34rpx;
    font-weight: bolder;
    color: black;
}

/*自定义的修改圈子名称模态框*/
/*弹出层蒙层*/
.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

/*模态对话框*/
.modal-dialog {
    width: 80%;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -200rpx 10%;
    border-radius: 20rpx;
}
/*对话框标题*/
.modal-title {
    padding-top: 40rpx;
    font-size: 36rpx;
    font-weight: bolder;
    color: black;
    text-align: center;
}
/*对话框内容*/
.modal-content {
    padding: 30rpx 30rpx;
}

/*对话框内容：添加自定义标签输入框*/
.modal-input {
    display: flex;
    background: #fff;
    border: 2rpx solid whitesmoke;
    border-radius: 10rpx;
    font-size: 28rpx;
}

/*输入框*/
.input {
    width: 100%;
    height: 80rpx;
    font-size: 28rpx;
    line-height: 80rpx;
    padding: 0 10rpx;
    box-sizing: border-box;
    color: black;
}
/*输入框placeholder样式*/
.input-holder {
    color: #666;
    font-size: 28rpx;
}

/*对话框按钮*/
.modal-footer {
    display: flex;
    flex-direction: row;
    height: 100rpx;
    border-top: 2rpx solid #dedede;
    font-size: 34rpx;
    line-height: 100rpx;
}
/*取消按钮*/
.btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 2rpx solid #dedede;
}
/*确认按钮*/
.btn-confirm {
    width: 50%;
    color: #F0B27A;
    text-align: center;
}

/*圈子编号*/
.project-id {
    width: auto;
    height: auto;
    margin: 0 30rpx;
    font-size: 26rpx;
    color: #C9C9C9;
}

/*昨日圈子数据统计面板：访问人数 & 已打卡人数 & 点赞条数 & 评论数*/
.project-data-statistics-panel {
    width: 100%;
    height: auto;
    background-color: white;
}
/*统计面板标题 & 统计时间*/
.panel-title {
    width: auto;
    height: 100rpx;
    margin: 0 30rpx;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;

    font-size: 32rpx;
    color: black;

    border-bottom: 2rpx #E5E5E5 solid;
}

.data-update-time {
    font-size: 22rpx;
    color: #C9C9C9;
}

/*面板统计数据 & 统计数据详情页面进入提示图标*/
.data-statistics-content {
    width: auto;
    height: auto;
    margin: 0 30rpx;

    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;

    padding: 30rpx 0 10rpx 0;
}

/*统计数据显示*/
.data-statistics-list {
    width: 94%;
    height: auto;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
}
.data-statistics-item {
    width: 50%;
    height: 120rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-around;

    font-size: 28rpx;
    color: #C9C9C9;

    margin-bottom: 30rpx;
}

.data {
    font-size: 46rpx;
    font-weight: bolder;
    color: black;
}

/*统计数据详情页进入图标*/
.into-data-statistics-detail-page-icon {
    width: 6%;
    height: auto;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}
.into-data-statistics-detail-page-icon > image {
    width: 60rpx;
    height: 60rpx;
}

/*圈子竞争力排名*/
.project-compete-rank {
    background-color: white;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.project-compete-rank > view {
    width: 80%;
    height: 100rpx;
    margin-left: 30rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    color: black;
}
.rank {
    color: red;
    font-size: 26rpx;
}

.project-compete-rank > image {
    width: 60rpx;
    height: 60rpx;
}

/*打卡契约*/
.punch-card-convention {
    background-color: white;
    width: auto;
    display: flex;
    padding: 0 30rpx;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.punch-card-convention-help {
    width: 40%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    font-size: 32rpx;
    color: black;
}
.punch-card-convention-help > image {
    width: 30rpx;
    height: 30rpx;
    margin-left: 10rpx;
}

.into-create-punch-card-convention-page {
    width:60%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}
.into-create-punch-card-convention-page > image {
    width: 60rpx;
    height: 60rpx;
}



/*管理功能列表*/
.back-stage-manage-function-list {
    width: 100%;
    height: 404rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    background-color: whitesmoke;
}

/*单项功能样式*/
.function-item {
    width: 33%;
    height: 200rpx;
    background-color: white;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;

    font-size: 26rpx;
    color: black;

}
.function-item > image {
    margin: 40rpx 0 30rpx 0;
    width: 60rpx;
    height: 60rpx;
}


/*页脚问题反馈按钮*/
.container-footer {
    width: 100%;
    height: 60rpx;
    padding-bottom: 40rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    color: cornflowerblue;
    text-align: center;
    background-color: whitesmoke;
}
