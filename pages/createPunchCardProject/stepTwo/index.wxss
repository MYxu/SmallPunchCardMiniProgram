.container {
    width: 100%;
    height: 100%;
}

/*圈子类型标签展示*/
.project-type-label-list {
    width: 100%;
    height: auto;
    margin-bottom: 160rpx;
    background-color: white;
}
.notice-message {
    width: 100%;
    height: 80rpx;
    margin-left: 40rpx;
    font-size: 30rpx;
    line-height: 80rpx;
}

/*一级标签展示*/
.parent-label-item {
    width: 100%;
    height: 160rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
/*标签图标*/
.label-img {
    width: 15%;
    height: 100%;
    margin-left: 40rpx;
    position: relative;
}
.label-img > image {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    top: 50%;
    margin-top: -40rpx;

}

/*标签名*/
.label-name {
    width: 25%;
    height: 160rpx;
    line-height: 160rpx;
    color: black;
    font-size: 30rpx;
}

/*被选的当前父级标签的子级标签*/
.choose-child-label-list {
    width: 45%;
    height: 160rpx;
    line-height: 160rpx;

    text-align: right;
    color: #F0B27A;
    font-size: 28rpx;
}

/*子标签显示、隐藏icon*/
.show-child-label-btn {
    width: 15%;
    height:100%;
    position: relative;
}

/*显示*/
.show-child-label {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 50%;
    margin-top: -20rpx;
    margin-left: 10rpx;

    transition:transform  0.3s;

}
/*隐藏*/
.hidden-child-label {
    transform:rotate(180deg);
}
/*分割线*/
.break-line-mix {
    width: 100%;
    height: 3rpx;
    background-color: #efefef;
}


/*父级标签下的子级标签列表显示*/
.child-label-list {
    width: 100%;
    height: 100%;
    background-color: #FAFAFA;
    padding: 40rpx 10rpx 10rpx 50rpx;
}

.child-label-list > view {
    width: auto;
    height: auto;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-content: center;
}

/*子级标签名*/
.child-label-item {
    margin-right: 40rpx;
    margin-bottom: 30rpx;
    width: 160rpx;
    height: 80rpx;
    line-height: 80rpx;
    border: 2rpx solid whitesmoke;
    border-radius: 10rpx;
    background-color: white;
    color: black;
    font-size: 32rpx;
    text-align: center;
}

/*子级标签被选中之后的显示状态*/
.child-label-item-choose {
    border: 2rpx solid #F0B27A;
    color: #F0B27A;
}


/*添加自定义标签Icon*/
.add-custom-project-label-btn {
    width: 15%;
    height:100%;
    position: relative;
}
.add-custom-project-label-btn > image {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 50%;
    margin-top: -20rpx;
    margin-left: 10rpx;
}

/*自定义的添加自定义标签模态框*/

/*弹出层蒙层*/
.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

/*模态对话框*/
.modal-dialog {
    width: 80%;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -200rpx 10%;
    border-radius: 20rpx;
}
/*对话框标题*/
.modal-title {
    padding-top: 40rpx;
    font-size: 36rpx;
    font-weight: bolder;
    color: black;
    text-align: center;
}
/*对话框内容*/
.modal-content {
    padding: 30rpx 30rpx;
}

/*对话框内容：添加自定义标签输入框*/
.modal-input {
    display: flex;
    background: #fff;
    border: 2rpx solid whitesmoke;
    border-radius: 10rpx;
    font-size: 28rpx;
}

/*输入框*/
.input {
    width: 100%;
    height: 80rpx;
    font-size: 28rpx;
    line-height: 80rpx;
    padding: 0 10rpx;
    box-sizing: border-box;
    color: black;
}
/*输入框placeholder样式*/
.input-holder {
    color: #666;
    font-size: 28rpx;
}

/*对话框按钮*/
.modal-footer {
    display: flex;
    flex-direction: row;
    height: 100rpx;
    border-top: 2rpx solid #dedede;
    font-size: 34rpx;
    line-height: 100rpx;
}
/*取消按钮*/
.btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 2rpx solid #dedede;
}
/*确认按钮*/
.btn-confirm {
    width: 50%;
    color: #F0B27A;
    text-align: center;
}



/*创建打卡圈子提交按钮*/
.submit-btn {
    width: 90%;
    height: auto;
    position: fixed;
    bottom: 0;
    padding: 30rpx 5%;
    background-color: whitesmoke;
}

/* 画布绘制过程不能隐藏 但是又不能被用户看见 所以定位在用户看不到地方 */
canvas{
    position: fixed;
    top: 0;
    left: 999px;
}

.preview {
    margin-bottom: 400rpx;
}
