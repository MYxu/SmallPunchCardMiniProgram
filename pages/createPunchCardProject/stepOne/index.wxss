.container {
    display: flex;
    flex-direction: column;
}

/*打卡圈子名称输入框*/
.input-project-name {
    width: auto;
    height: 30%;
    margin: 200rpx 10% 0 10%;
    text-align: center;
    font-size: 40rpx;
    color: black;
}

/*输入框下边的横线*/
.input-project-name > view {
    width: 100%;
    height: 4rpx;
    margin-top: 5rpx;
    background-color: lightseagreen;
}

/*打卡圈子隐私类型选择*/
.chose-project-privacy-type {
    width: auto;
    height: 30%;
    padding: 480rpx 15% 0 15%;

    font-size: 28rpx;
    color: black;

}
.radio-group radio {
    margin-bottom: 12rpx;
}

/*下一步按钮*/
.submitBtn {
    width: auto;
    height: 40%;
    margin: 0 5% 0 5%;
    padding-top: 40rpx;
}

