.container {
    background-color: whitesmoke;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

/*填写圈主简介*/
.input-creator-intr-info {
    width: 100%;
    height: 400rpx;
    margin-bottom: 20rpx;
    padding-left: 30rpx;
    background-color: white;
}

.title {
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    font-size: 32rpx;
    color: black;
    font-weight: bolder;
}

.input-creator-intr-info-area {
    width: 100%;
    height: 240rpx;
    line-height: 1.3;
}
.input-text-num-notice {
    width: auto;
    height: auto;
    font-size: 22rpx;
    text-align: right;
    padding-right: 50rpx;
    margin-bottom: 10rpx;
}

/*填写圈主微信号*/
.input-creator-weixin-info {
    width: 100%;
    height: 360rpx;
    padding-left: 30rpx;
    background-color: white;
}

.input-creator-weixin-info-notice {
    font-size: 28rpx;
    color: #cccccc;
    margin-bottom: 20rpx;
}

.input-creator-weixin-info-area {
    width: 60%;
    height: 60rpx;
    padding-left: 10rpx;
    border: 2rpx #cccccc solid;
    border-radius: 10rpx;


}
.input-creator-weixin-info-area input {
    width: 100%;
    height: 100%;
    line-height: 60rpx;
    font-size: 30rpx;
    color: black;
}

.placeholder-style {
    font-size: 30rpx;
    color: #cccccc;
}

/*保存按钮*/
.update-creator-intr-info-btn {
    width: 100%;
    height: 120rpx;
    text-align: center;
    background-color: white;
}
.update-creator-intr-info-btn text {
    width: auto;
    height: 80rpx;
    padding: 20rpx 25%;
    line-height: 80rpx;
    border-radius: 10rpx;
    color: white;
    background-color: #F0B27A;
}
