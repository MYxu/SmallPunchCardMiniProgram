/*日记单项展示*/
.user-punch-card-diary-item {
    width: 100%;
    height: auto;
    padding-bottom: 20rpx;
}


/* 日记展示头部：日记用户头像、昵称、打卡时间、已打卡天数、日记私密类型、更多操作按钮 */
.header-info {
    width: auto;
    height: 120rpx;
    margin: 0 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;

}

/* 日记发表用户头像 */
.publisher-avatar {
    width: 80rpx;
    height: 120rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;

    position: relative;
}

.publisher-avatar > image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

/*性别*/
.publisher-sex-male{
    width: 34rpx;
    height: 34rpx;

    border-radius: 50%;
    background-color: white;

    position: absolute;
    right: 0;
    bottom: 20rpx;

    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;

}
.publisher-sex-male > image{
    width: 30rpx;
    height: 30rpx;
}

.publisher-sex-female {
    width: 34rpx;
    height: 34rpx;

    border-radius: 50%;
    background-color: white;

    position: absolute;
    right: 0;
    bottom: 20rpx;

    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;

}
.publisher-sex-female > image{
    width: 30rpx;
    height: 30rpx;
    transform: rotate(30deg);
}

/*打卡用户昵称、打卡时间、坚持天数、日记隐私类型*/
.header-center-info {
    width: 100%;
    height: 120rpx;

}

/* 打卡日记用户昵称 */
.publisher-nick-name {
    width: 100%;
    height: 60rpx;

    margin-left: 16rpx;
    margin-top: 8rpx;
    text-align: left;
    word-break: break-word;
    font-size: 32rpx;
    color: #F0B27A;
    display: flex;
    flex-direction: column-reverse;
    justify-content: flex-start;
}


/*打卡时间 & 坚持天数*/
.punch-time {
    width: 100%;
    height: 30rpx;
    margin-left: 16rpx;

    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}
.punch-time > text {
    width: auto;
    height: 30rpx;
    font-size: 22rpx;
    color: #8a8a8a;
    margin-right: 16rpx;
}

/* 打卡日记隐私类型按钮 */
.diary-visible-type {
    width: 30rpx;
    height: 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-self: center;
}
.diary-visible-type > image {
    width: 30rpx;
    height: 30rpx;
}


/* 当本人进入自己的个人主页时显示可删除按钮 */
.header-info-right {
    width: 20%;
    height: 100%;
    display: flex;
    flex-direction: row-reverse;
    justify-content: flex-start;
    align-items: center;

}

/*日记显示更多操作的控制按钮：*/
.diary-more-operate-btn {
    width: 40rpx;
    height: 40rpx;
    margin-left: 12rpx;
}

.diary-more-operate-btn > image {
    width: 40rpx;
    height: 40rpx;
}

/*自定义模态框显示对应的操作按钮：取消置顶、删除、投诉*/
/*蒙层*/
.mask {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

/*蒙层中间的操作按钮*/
.mask-content-more-diary-operate-btn {
    background-color: white;
    width: 600rpx;
    height: auto;

    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    border-radius: 12rpx;
}
.more-diary-operate-btn-item {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 30rpx;
    color: black;
    margin-left: 50rpx;
}

.close-more-diary-operate-btn {
    position: fixed;
    top: 60rpx;
    right: 60rpx;
}
.close-more-diary-operate-btn > image {
    width: 40rpx;
    height: 40rpx;
}


/* 打卡日记内容：打卡文字、图片、地址、所属打卡圈子信息、点赞、评论、分享*/
.diary-detail-content {
    width: auto;
    height: auto;
    margin:0 20rpx 0 116rpx;
}

/* 打卡文字内容 */
.diary-text {
    margin-bottom: 10rpx;
    font-size: 34rpx;
}

/* 打卡图片，一张图片直接显示，二张以上九宫格格式展示 */
.diary-resource {
    height: auto;
    width: 100%;
}
/*一张图片*/
.one-image image {
    width: 100%;
}
/*多张图片*/
.diary-img-list {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
}
.diary-img-item {
    margin: 0 10rpx 10rpx 0;
}
.diary-img-item > image{
    width: 100%;
    height: 100%;
}



/* 打卡地址 */
.not-punch-card-address {
    margin-top: 10rpx;
    font-size: 22rpx;
    color: #8a8a8a;
}


.not-punch-card-address > image {
    width: 20rpx;
    height: 20rpx;
    margin-top: 4rpx;
    margin-right: 8rpx;
}
.punch-card-address {
    margin-top: 10rpx;
    font-size: 22rpx;
    color: #F0B27A;
}
.punch-card-address > image {
    width: 20rpx;
    height: 20rpx;
    margin-top: 4rpx;
    margin-right: 8rpx;
}


/* 打卡圈子信息*/
.diary-project-info {
    background-color: WhiteSmoke;

    display: flex;
    height: 100rpx;
    width: 100%;
    margin-top: 10rpx;
    margin-bottom: 20rpx;
}

/* 打卡圈子信息：封面*/
.diary-project-cover-img {
    width: 100rpx;
    height: 100rpx;
    float: left;
}

.diary-project-cover-img > image {
    width: 100rpx;
    height: 100rpx;
}

/* 打卡圈子信息：圈子名称*/
.diary-project-name {
    flex: 1;
    height: 100rpx;
    text-align: left;
}

.diary-project-name > text {
    font-size: 26rpx;
    margin-left: 20rpx;

    /*设置文字居中*/
    height: 100rpx;
    line-height: 100rpx;
}

/*进入打卡圈子详情页图标*/
.into-diary-detail {
    width: 100rpx;
    height: 100rpx;
    float: right;
}

.into-diary-detail > image {
    margin-top: 20rpx;
    margin-left: 40rpx;
    width: 60rpx;
    height: 60rpx;
}



/*打卡日记互动信息：点赞、评论、分享*/
.diary-interaction-info {
    /*background-color: cyan;*/
    height: auto;
    width: auto;
}
/* 互动按钮*/
.diary-interaction-btn {
    height: 40rpx;
    width: 100%;
    margin: 12rpx 0;

    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;

}
/*点赞*/
.like-btn {
    /*background-color: greenyellow;*/
    height: 40rpx;
    width: 25%;

    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;

    font-size: 24rpx;
    color: #8a8a8a;
}

.like-btn > image {
    height: 30rpx;
    width: 30rpx;
    margin-right: 8rpx;
}

/*评论*/
.comment-btn {
    /*background-color: blue;*/
    height: 40rpx;
    width: 25%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;

    font-size: 24rpx;
    color: #8a8a8a;

    margin-right: 8rpx;
}

.comment-btn image {
    height: 40rpx;
    width: 40rpx;
    margin-right: 8rpx;

}

/*分享*/
button::after {
    /*清除button默认样式*/
    border: none;
}
.share-btn {
    /*background-color: darkorange;*/
    height: 40rpx;
    width: 25%;
    padding: 0;
    background-color: white;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;

    font-size: 24rpx;
    color: #8a8a8a;

}

.share-btn > image {
    height: 30rpx;
    width: 30rpx;
    margin-right: 8rpx;
}

/*点评日记按钮*/
.remark-diary-btn {
    height: 40rpx;
    width: 25%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    /*background-color: #f9f9f9;*/
    font-size: 24rpx;
    color: #F0B27A;

}

.remark-diary-btn > image {
    height: 30rpx;
    width: 30rpx;
    margin-right: 8rpx;
}

/*点赞信息：点赞用户昵称*/
.like-user-info {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    word-break: break-all;
    height: auto;
    background-color: whitesmoke;

    padding-top: 10rpx;
    padding-bottom: 10rpx;

}

.like-user-info image {
    height: 30rpx;
    width: 30rpx;
    display: inline;
    margin-left: 12rpx;
}

.like-user-info text {
    margin-left: 30rpx;
    font-size: 28rpx;
    position: relative;
    height: 40rpx;
    line-height: 40rpx;

    /*color: #0c61dd;*/
    color: #F0B27A;
}

/*评论信息*/
.commentInfo {
    height: auto;
    padding: 15rpx 15rpx 5rpx 15rpx;
    background-color: whitesmoke;
}

.commentInfo view {
    height: auto;
    line-height: 1.1;
    margin-bottom: 6rpx;
}

.commentInfo text {
    text-align:left;
    font-size: 28rpx;
    color: #F0B27A;
}

/* 评论输入框*/
.input_null{
    color: #C9C9C9;
}

.receiverComment{
    display: flex;
    align-items: flex-end; /*底部对齐*/
    justify-content: space-between; /*两端对齐*/
    box-sizing: border-box;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 36rpx 0 36rpx 30rpx;
    background-color: #F7F8F7;
    font-size: 28rpx;
    z-index: 999;
}
.receiverComment .receiverInput{
    width: 84%;
    min-height: 37rpx;
    max-height: 111rpx; /*最多显示三行*/
    border-width: 15rpx 20rpx; /*使用padding与预期留白不一致，故使用border*/
    border-style: solid;
    border-color: #ffffff;
    line-height: 34rpx;
    font-size: 28rpx;
    background-color: #ffffff;
    border-radius: 4rpx;
}
.receiverComment button{
    width: 15%;
    margin-right: 10rpx;
    margin-left: 10rpx;
    padding: 6rpx 20rpx;
}
